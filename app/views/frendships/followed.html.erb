<div class='col-4'>
<%= render 'layouts/info', user: current_user, book: @book %>
</div>
<div class="col-8">
	<h2>Followed</h2>
	<table class="table">
		<thead>
			<th></th>
			<th>name</th>
			<th></th>
		</thead>
		<tbody>
		<% @user.followed_user.each do |user| %>
			<tr>
				<td><%= image_tag user.image_display("60x60") %></td>
				<td><%= user.name %></td>
				<td><%= link_to "show", user_path(user.id) %></td>
			</tr>
		<% end %>
		</tbody>
	</table>
</div>