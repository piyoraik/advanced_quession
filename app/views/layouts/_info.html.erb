<h2>UserInfo</h2>
<%= image_tag user.image_display("200x200") %>
<table class="table">
	<tr>
		<th>name</th>
		<td><%= user.name %></td>
	</tr>
	<tr>
		<th>introduction</th>
		<td><%= user.introduction %></td>
	</tr>
	<tr>
		<th>Follower</th>
		<td><%= link_to user.follower_user.count, user_follower_path(user.id) %></td>
	</tr>
	<tr>
		<th>Followed</th>
		<td><%= link_to user.followed_user.count, user_followed_path(user.id) %></td>
	</tr>
</table>
<div class="row">
<% if current_user != user %>
	<%= render 'frendships/follow_unfollow', user: user %>
<% end %>
<% if current_user == user %>
	<%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block col-10 mx-auto" do %>
		<i class="fas fa-user-cog"></i>
	<% end %>
<% end %>
</div>
