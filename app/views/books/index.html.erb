<%= @book.errors.any? ? (render 'layouts/errorMessage', model: @book ) : "" %>
<div class='col-4'>
<%= render 'layouts/info', user: current_user, book: @book %>
</div>
<div class="col-8">
	<h2>Books</h2>
	<table class="table">
		<thead>
			<th></th>
			<th>Title</th>
			<th>Options</th>
		</thead>
		<tbody>
			<% @books.each do |book| %>
				<tr>
					<td><%= image_tag book.user.image_display("60x60") %></td>
					<td><%= link_to book.title, book_path(book.id) %></td>
					<td><%= book.body %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>